<div class="page">
  <div class="page-main">

    {{> header this }}

    <div class="my-3 my-md-5">
      <div class="container">
        <div class="page-header">
          <h1 class="page-title">
            View Routes
          </h1>
        </div>

        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Routes details</h3>
              </div>
              <div class="table-responsive">
                <table class="table card-table table-vcenter text-nowrap">
                  <thead>
                    <tr>
                      <th><span title="Start Node" data-toggle="tooltip">P1</span></th>
                      <th><span title="Arrive Node" data-toggle="tooltip">P2</span></th>
                      <th><span title="People in the route" data-toggle="tooltip">People</span></th>
                      <th><span title="Max people in the route" data-toggle="tooltip">LOS</span></th>
                      <th><span title="Smoke indicator" data-toggle="tooltip">V</span></th>
                      <th><span title="Fire indicator" data-toggle="tooltip">R</span></th>
                      <th><span title="Wall resistance" data-toggle="tooltip">K</span></th>
                      <th><span title="Route length" data-toggle="tooltip">L</span></th>
                      <th><span title="Smoke weight" data-toggle="tooltip">Pv</span></th>
                      <th><span title="Fire weight" data-toggle="tooltip">Pr</span></th>
                      <th><span title="Wall weight" data-toggle="tooltip">Pk</span></th>
                      <th><span title="Length Weight" data-toggle="tooltip">Pl</span></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#routes}}
                    <tr>
                      <td>{{code_p1}}</td>
                      <td>{{code_p2}}</td>
                      <td>{{people}}</td>
                      <td>{{LOS}}</td>
                      <td>{{V}}</td>
                      <td>{{R}}</td>
                      <td>{{K}}</td>
                      <td>{{L}}</td>
                      <td>{{pv}}</td>
                      <td>{{pr}}</td>
                      <td>{{pk}}</td>
                      <td>{{pl}}</td>
                      <td>
                        <a class="icon" href="/admin/mod-route?id={{id}}" title="Modify route">
                          <i class="fe fe-edit"></i>
                        </a>
                        &nbsp;&nbsp;
                        <a class="icon" href="/admin/delete-route/{{id}}" title="Remove route" onclick="return confirm('Are you sure?')">
                          <i class="fe fe-trash-2"></i>
                        </a>
                      </td>
                    </tr>
                    {{/routes}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div><!-- /row -->
        
      </div><!-- /container -->
    </div><!-- /margin -->
  </div><!-- /page-main -->

  {{> footer }}

</div><!-- /page -->