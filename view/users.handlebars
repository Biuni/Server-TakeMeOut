<div class="page">
  <div class="page-main">

    {{> header this }}

    <div class="my-3 my-md-5">
      <div class="container">
        <div class="page-header">
          <h1 class="page-title">
            All Users
          </h1>
        </div>

        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">User details</h3>
              </div>
              <div class="table-responsive">
                <table class="table card-table table-vcenter text-nowrap">
                  <thead>
                    <tr>
                      <th></th>
                      <th>UUID</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Registration date</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#users}}
                    <tr>
                      <td><span class="avatar">{{getInitials name}}</span></td>
                      <td><span class="text-muted">{{uuid}}</span></td>
                      <td>{{name}}</td>
                      <td>{{mail}}</td>
                      <td>{{formatDate date}}</td>
                      <td>
                        <a class="icon" href="/admin/delete-user/{{id}}" onclick="return confirm('Are you sure?')">
                          <i class="fe fe-trash-2"></i>
                        </a>
                      </td>
                    </tr>
                    {{/users}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div><!-- /row -->
        
      </div><!-- /container -->
    </div><!-- /margin -->
  </div><!-- /page-main -->

  {{> footer }}

</div><!-- /page -->