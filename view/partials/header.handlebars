<div class="header py-4">
  <div class="container">
    <div class="d-flex">
      <a class="header-brand" href="/admin">
        <img src="../assets/images/takemeout.png" class="header-brand-img" alt="TakeMeOut logo">
      </a>
      <div class="d-flex order-lg-2 ml-auto">
        <div class="nav-item d-none d-md-flex">
          {{#if emergencyStatus}}
          <a href="/admin/emergency-stop" class="btn btn-sm btn-outline-success" onclick="return confirm('Are you sure?')">
            Stop Emergency
          </a>
          {{else}}
          <a href="/admin/emergency" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">
            Active Emergency
          </a>
          {{/if}}
        </div>
        <div class="dropdown">
          <a href="#" class="nav-link pr-0 leading-none" data-toggle="dropdown">
            <span class="avatar avatar-azure">TM</span>
            <span class="ml-2 d-none d-lg-block">
              <span class="text-default">TakeMeOut</span>
              <small class="text-muted d-block mt-1">Administrator</small>
            </span>
          </a>
          <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
            <a class="dropdown-item" href="/admin/password">
              <i class="dropdown-icon fe fe-lock"></i> Change Password
            </a>
            <a class="dropdown-item" href="/admin/logout">
              <i class="dropdown-icon fe fe-log-out"></i> Logout
            </a>
          </div>
        </div>
      </div>
      <a href="#" class="header-toggler d-lg-none ml-3 ml-lg-0" data-toggle="collapse" data-target="#headerMenuCollapse">
        <span class="header-toggler-icon"></span>
      </a>
    </div>
  </div>
</div>
<div class="header collapse d-lg-flex p-0" id="headerMenuCollapse">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg order-lg-first">
        <ul class="nav nav-tabs border-0 flex-column flex-lg-row">
          <li class="nav-item">
            <a href="/admin" class="nav-link">
              <i class="fe fe-activity"></i> Stats</a>
          </li>
          <li class="nav-item">
            <a href="javascript:void(0)" class="nav-link" data-toggle="dropdown">
              <i class="fe fe-box"></i> Nodes</a>
            <div class="dropdown-menu dropdown-menu-arrow">
              <a href="/admin/add-node" class="dropdown-item ">Add Node</a>
              <a href="/admin/view-nodes" class="dropdown-item ">View Nodes</a>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a href="javascript:void(0)" class="nav-link" data-toggle="dropdown">
              <i class="fe fe-corner-down-right"></i> Routes</a>
            <div class="dropdown-menu dropdown-menu-arrow">
              <a href="/admin/add-route" class="dropdown-item ">Add Route</a>
              <a href="/admin/view-routes" class="dropdown-item ">View Routes</a>
            </div>
          </li>
          <li class="nav-item dropdown">
            <a href="javascript:void(0)" class="nav-link" data-toggle="dropdown">
              <i class="fe fe-users"></i> Users</a>
            <div class="dropdown-menu dropdown-menu-arrow">
              <a href="/admin/view-users" class="dropdown-item ">View Users</a>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

  {{#if emergencyStatus}}
  <div class="container mt-5">
    <div class="alert alert-icon alert-danger" role="alert">
      <i class="fe fe-alert-triangle mr-2" aria-hidden="true"></i>
      <strong>Warning! The system is in emergency status.</strong> Click on the upper right button to disable it.
    </div>
  </div>
  {{/if}}