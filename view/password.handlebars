<div class="page">
  <div class="page-main">

    {{> header this }}

    <div class="my-3 my-md-5">
      <div class="container">
        <div class="page-header">
          <h1 class="page-title">
            Change Password
          </h1>
        </div>

        {{#result.display}}
          {{#if result.update}}
            <div class="alert alert-success alert-dismissible" role="alert">
              <button data-dismiss="alert" class="close"></button>
              Password updated!
            </div>
          {{else}}
            <div class="alert alert-danger alert-dismissible" role="alert">
              <button data-dismiss="alert" class="close"></button>
              Error! Try again.
            </div>
          {{/if}}
        {{/result.display}}

        <form action="/admin/password" method="POST">
          <div class="form-group">
            <div class="input-icon">
              <span class="input-icon-addon">
                <i class="fe fe-target"></i>
              </span>
              <input type="password" class="form-control" required name="old_pwd" placeholder="Old Password">
            </div>
          </div>
          <div class="form-group">
            <div class="input-icon">
              <span class="input-icon-addon">
                <i class="fe fe-lock"></i>
              </span>
              <input type="password" class="form-control" required name="new_pwd" placeholder="New Password">
            </div>
          </div>
          <div class="form-group">
            <div class="input-icon">
              <span class="input-icon-addon">
                <i class="fe fe-lock"></i>
              </span>
              <input type="password" class="form-control" required name="rep_pwd" placeholder="Repeat Password">
            </div>
          </div>
          <input type="submit" class="btn btn-azure" value="Save" />
        </form>

      </div>
    </div><!-- /margin -->
  </div><!-- /page-main -->

  {{> footer }}

</div><!-- /page -->